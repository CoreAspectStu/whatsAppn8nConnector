{
  "services": {
    "whatsapp-ai-bot": {
      "type": "application",
      "image": {
        "type": "dockerfile",
        "path": "Dockerfile"
      },
      "port": {
        "internal": 3000,
        "external": 3000,
        "protocol": "http"
      },
      "volumes": [
        {
          "source": "data",
          "destination": "/app/data"
        },
        {
          "source": "sessions",
          "destination": "/app/sessions"
        },
        {
          "source": "logs",
          "destination": "/app/logs"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "LOG_LEVEL",
          "value": "info"
        },
        {
          "name": "CLIENT_ID",
          "value": "whatsapp-ai-bot"
        },
        {
          "name": "ALLOWED_USERS",
          "value": "REPLACE_WITH_YOUR_PHONE_NUMBERS"
        },
        {
          "name": "N8N_BASE_URL",
          "value": "http://REPLACE_WITH_YOUR_N8N_URL:5678"
        },
        {
          "name": "N8N_WEBHOOK_PATH",
          "value": "webhook/whatsapp-ai-bot"
        },
        {
          "name": "AI_PROVIDER",
          "value": "openai"
        },
        {
          "name": "OPENAI_API_KEY",
          "value": "REPLACE_WITH_YOUR_OPENAI_API_KEY"
        },
        {
          "name": "OPENAI_MODEL",
          "value": "gpt-4-turbo"
        }
      ],
      "restart": "always",
      "healthCheck": {
        "path": "/health",
        "port": 3000,
        "interval": 30,
        "timeout": 5,
        "retries": 3
      },
      "deploy": {
        "replicas": 1,
        "resources": {
          "limits": {
            "cpu": "1",
            "memory": "1G"
          },
          "reservations": {
            "cpu": "0.25",
            "memory": "512M"
          }
        }
      }
    }
  },
  "networks": {
    "default": {
      "external": false
    }
  },
  "volumes": {
    "data": {
      "driver": "local"
    },
    "sessions": {
      "driver": "local"
    },
    "logs": {
      "driver": "local"
    }
  }
}