# Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info
CLIENT_ID=whatsapp-ai-bot

# Security
JWT_SECRET=your-jwt-secret-key-here
ENCRYPTION_KEY=your-32-char-encryption-key
API_KEY=your-api-key-for-external-access
CORS_ORIGIN=*

# WhatsApp Configuration
COMMAND_PREFIX=!bot
PROCESS_SELF_MESSAGES=false
NOTIFY_UNAUTHORIZED=true
MAX_CONVERSATION_LENGTH=20
SHOW_TYPING_INDICATOR=true

# User Access Control
ALLOWED_USERS=917XXXXXXXXX,918XXXXXXXXX
ALLOWED_GROUPS=919XXXXXXXXX-XXXXX@g.us,*

# n8n Integration
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=your-n8n-api-key
N8N_WEBHOOK_PATH=webhook/whatsapp-ai-bot
N8N_TIMEOUT=15000

# AI Provider (openai, anthropic, huggingface) - Used only for fallback
AI_PROVIDER=openai

# OpenAI Configuration (used only for fallback if n8n is unavailable)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo

# Database (for conversation persistence)
DB_TYPE=sqlite # sqlite, mysql, postgres
DB_PATH=./data/conversations.db # for sqlite
# DB_HOST=localhost # for mysql/postgres
# DB_PORT=3306 # for mysql/postgres
# DB_USER=user # for mysql/postgres
# DB_PASSWORD=password # for mysql/postgres
# DB_NAME=whatsapp_bot # for mysql/postgres

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_WEBHOOK=http://localhost:5678/webhook/bot-analytics

# Advanced Options
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser # Optional, for custom Chromium path
CONCURRENT_SESSIONS=1
REQUEST_TIMEOUT=30000
RESTART_ON_CRASH=true